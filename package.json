{
	"name": "commit-forge",
	"version": "2.0.1",
	"description": "A lightweight CLI tool for generating, linting, and creating commits with enforced formatting",
	"main": "dist/cli.js",
	"bin": {
		"commit-forge": "./dist/cli.js"
	},
	"scripts": {
		"build": "bun run build.js",
		"prepack": "npm run build",
